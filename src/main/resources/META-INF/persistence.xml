<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="CarTackerPU" transaction-type="JTA">
        <jta-data-source>jdbc/RoadPricing_DisplacementSystem</jta-data-source>
        <class>domain.CarTracker</class>
        <class>domain.CarTrackerRule</class>
        <class>domain.Credentials</class>
        <class>domain.ProcessedCars</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
